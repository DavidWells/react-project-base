{
  "name": "react-project-base",
  "version": "0.0.1",
  "description": "This is the project I use to start react projects",
  "scripts": {
    "start-message": "babel-node tools/startMessage.js",
    "prestart": "npm-run-all --parallel start-message remove-dist lint:tools",
    "start": "npm-run-all --parallel test:watch open:src",
    "open:src": "babel-node tools/srcServer.js",
    "open:dist": "babel-node tools/distServer.js",
    "lint:tools": "eslint webpack.config.js tools",
    "fix": "eslint --fix src/.; exit 0",
    "clean-dist": "npm run remove-dist && mkdir dist",
    "remove-dist": "node_modules/.bin/rimraf ./dist",
    "build:html": "babel-node tools/buildHtml.js",
    "prebuild": "npm run clean-dist && npm run build:html",
    "build": "babel-node tools/build.js && npm run open:dist",
    "test": "ava --require ./tools/testSetup.js src/**/*.spec.js --verbose",
    "test:watch": "npm run test -- --watch",
    "mocha": "mocha tools/testSetup.js src/**/*.spec.js --reporter progress",
    "mocha:watch": "npm run mocha -- --watch"
  },
  "author": "David Wells",
  "dependencies": {
    "react": "15.0.1",
    "react-dom": "15.0.1",
    "react-redux": "4.4.5",
    "react-router": "2.3.0",
    "redux": "3.5.2"
  },
  "devDependencies": {
    "ava": "^0.14.0",
    "babel-cli": "6.7.7",
    "babel-core": "6.7.7",
    "babel-eslint": "6.0.4",
    "babel-loader": "6.2.7",
    "babel-plugin-react-display-name": "2.0.0",
    "babel-plugin-webpack-loaders": "^0.4.0",
    "babel-preset-es2015": "6.6.0",
    "babel-preset-react": "6.5.0",
    "babel-preset-react-hmre": "1.1.1",
    "babel-preset-stage-0": "^6.5.0",
    "babel-polyfill": "6.7.4",
    "babel-register": "6.7.2",
    "browser-sync": "2.12.5",
    "cheerio": "0.20.0",
    "colors": "1.1.2",
    "connect-history-api-fallback": "1.2.0",
    "cross-env": "1.0.7",
    "css-loader": "0.23.1",
    "enzyme": "^2.2.0",
    "eslint": "2.8.0",
    "eslint-loader": "1.3.0",
    "eslint-plugin-import": "1.6.0",
    "eslint-plugin-react": "5.0.1",
    "eslint-config-standard": "^5.1.0",
    "eslint-plugin-promise": "^1.1.0",
    "eslint-plugin-standard": "^1.3.2",
    "extract-text-webpack-plugin": "1.0.1",
    "file-loader": "0.8.5",
    "jsdom": "8.4.0",
    "npm-run-all": "1.8.0",
    "postcss-color-function": "^2.0.0",
    "postcss-focus": "^1.0.0",
    "postcss-import": "^8.1.0",
    "postcss-initial": "^1.5.0",
    "postcss-loader": "^0.8.2",
    "postcss-math": "0.0.1",
    "postcss-mixins": "^4.0.1",
    "postcss-nested": "^1.0.0",
    "postcss-simple-vars": "^1.0.1",
    "postcss-wcag-contrast": "^1.0.0",
    "react-addons-test-utils": "15.0.1",
    "rimraf": "2.5.2",
    "sinon": "1.17.3",
    "style-loader": "0.13.1",
    "webpack": "1.13.0",
    "webpack-dev-middleware": "1.6.1",
    "webpack-hot-middleware": "2.10.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DavidWells/react-project-base"
  },
  "ava": {
    "babel": "inherit",
    "require": [
      "./tools/testSetup.js"
    ]
  }
}
